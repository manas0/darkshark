{
    "manifest_version": 2,
    "name": "BgColor",
    "version": "1.0",
    "description": "Change bg color of any page!!",
    "icons": {
        "128": "ds128.png",
        "48": "ds48.png",
        "16": "ds16.png"
    },
    "page_action": {
        "default_icon": "ds16.png",
        "default_popup": "popup.html",
        "default_title": "BgColor"
    },
    "background": {
        "scripts": ["sniff.js" , "traffic.js"]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [ "jquery-3.5.1.min.js", "content.js"]
        }
    ],
    "permissions" : [
        "webRequest",
        "tabs",
        "<all_urls>"
    ]
}
